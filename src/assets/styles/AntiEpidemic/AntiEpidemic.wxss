* {
  margin: 0;
  padding: 0;
}
html,
body,
#app {
  height: 100%;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
.body {
  height: 100%;
  overflow: hidden;
  -webkit-perspective: 1000;
  -webkit-backface-visibility: hidden;
  background: url(../../../assets/images/AntiEpidemic/background.png) no-repeat center;
  background-size: 100% 100%;
  cursor: pointer;
}
.body .box {
  position: relative;
  width: 80vw;
  height: 80vw;
  margin: 0 auto;
  cursor: pointer;
}
.body .box .big {
  position: absolute;
  /* background-color: pink; */
  width: 25vw;
  height: 25vw;
  border-radius: 2vw;
  -webkit-transition: all 1s ease-out;
  transition: all 1s ease-out;
  box-sizing: border-box;
  -webkit-transform-style: preserve-3d;
  transform-style: preserve-3d;
  transform: perspective(1000);
  cursor: pointer;
}
.body .box .big .front,
.body .box .big .back {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 2vw;
  cursor: pointer;
}
.body .box .big .front {
  z-index: -1;
  background: url(../../../assets/images/AntiEpidemic/mask.png) no-repeat center;
  background-size: 23vw;
}
.body .box .big .back {
  z-index: -1;
  -webkit-transform: rotateY(180deg);
  transform: rotateY(180deg);
  background: url(../../../assets/images/AntiEpidemic/back.png) no-repeat center;
  background-size: 23vw;
}
.body .box .big:nth-child(1),
.body .box .big:nth-child(2),
.body .box .big:nth-child(3) {
  top: 1vw;
  cursor: pointer;
}
.body .box .big:nth-child(1),
.body .box .big:nth-child(4),
.body .box .big:nth-child(7) {
  left: 2.5vw;
  cursor: pointer;
}
.body .box .big:nth-child(2),
.body .box .big:nth-child(5),
.body .box .big:nth-child(8) {
  left: 27.5vw;
  cursor: pointer;
}
.body .box .big:nth-child(3),
.body .box .big:nth-child(6),
.body .box .big:nth-child(9) {
  right: 2.5vw;
  cursor: pointer;
}
.body .box .big:nth-child(4),
.body .box .big:nth-child(5),
.body .box .big:nth-child(6) {
  top: 27.5vw;
  cursor: pointer;
}
.body .box .big:nth-child(7),
.body .box .big:nth-child(8),
.body .box .big:nth-child(9) {
  bottom: 1vw;
  cursor: pointer;
}
.body .defate {
  width: 70vw;
  height: 50vw;
  top: 50%;
  left: 50%;
  margin-left: -35vw;
  margin-top: -25vw;
  position: absolute;
  z-index: 10;
  display: none;
  background: url(../../../assets/images/AntiEpidemic/defate.png) no-repeat center;
  background-size: 100% 100%;
}
.body .defate .left,
.body .defate .right {
  height: 10vw;
}
.body .defate .left {
  width: 27vw;
  float: left;
  margin-left: 10vw;
  margin-top: 30vw;
  background: url(../../../assets/images/AntiEpidemic/again.png) no-repeat center;
  background-size: 100% 100%;
}
.body .defate .right {
  width: 17vw;
  float: right;
  margin-right: 10vw;
  margin-top: 30vw;
  background: url(../../../assets/images/AntiEpidemic/choose.png) no-repeat center;
  background-size: 100% 100%;
}
.body .victory {
  position: absolute;
  width: 70vw;
  height: 160vw;
  top: 50%;
  left: 50%;
  margin-left: -35vw;
  margin-top: -80vw;
  z-index: 10;
  display: none;
  background-size: 100%;
}
.body .victory .backgroundImage {
  position: relative;
  width: 100%;
  height: 160vw;
  background: url(../../../assets/images/AntiEpidemic/victory.png) no-repeat center;
  background-size: 100% 100%;
}
.body .victory .bottom {
  position: absolute;
  width: 16vw;
  height: 16vw;
  left: 50%;
  bottom: 10vw;
  margin-left: -8vw;
  background: url(../../../assets/images/AntiEpidemic/arrow.png) no-repeat center;
  background-size: 100% 100%;
}
.body button {
  position: absolute;
  top: 400px;
  margin: 0 auto;
}
